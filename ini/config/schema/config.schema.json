{
    "$schema": "http://json-schema.org/schema",
    "title": "Initialize Template Config",
    "description": "Initialize-TemplateRepository Config Schema",
    "type": "object",
    "required": [
        "ProjectLogoPath",
        "ProjectTagline",
        "GitHubAccount",
        "StackShareAccount",
        "CodeCovAccount"
    ],
    "properties": {
        "ProjectLogoPath": {
            "type": "string",
            "description": "A HTTP URL or file path in your repository of the logo you'd like displayed in the header of the README"
        },
        "ProjectTagline": {
            "type":"string",
            "description": "The Tagline that appears beneath the Project Title in the header of the README"
        },
        "GitHubAccount": {
            "type": "string",
            "description": "Your GitHub Account Name"
        },
        "StackShareAccount": {
            "type": "string",
            "description": "Your StackShare Account Name"
        },
        "CodeCovAccount": {
            "type": "string",
            "description": "Your CodeCov Account Name"
        }
    }
}